spec:
  replicas: 0  # KEDA will manage scaling (min: 0, max: 50)
  selector:
    matchLabels:
      app: optimus-worker-{{language}}
      language: {{language}}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0  # Never kill pod during scale-down if it has jobs
      maxSurge: 1        # Allow extra pods during updates
  template:
    metadata:
      labels:
        app: optimus-worker-{{language}}
        language: {{language}}
    spec:
      terminationGracePeriodSeconds: 300  # 5 minutes for job completion
      containers:
      - name: optimus-worker
        image: optimus-worker:latest
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 8080
          name: health
        env:
        # ===== LANGUAGE BINDING (REQUIRED) =====
        - name: OPTIMUS_LANGUAGE
          value: "{{language}}"
        - name: OPTIMUS_QUEUE
          value: "{{queue_name}}"
        - name: OPTIMUS_IMAGE
          value: "{{image}}"
        
        # ===== REDIS CONNECTION =====
        - name: REDIS_HOST
          value: "redis:6379"
        - name: REDIS_URL
          value: "redis://redis:6379"
        
        # ===== LOGGING & OBSERVABILITY =====
        - name: RUST_LOG
          value: "info"
        - name: HEALTH_PORT
          value: "8080"
        
        # ===== DOCKER ENGINE =====
        - name: DOCKER_HOST
          value: "unix:///var/run/docker.sock"
        
        # ===== CONCURRENCY CONTROL =====
        - name: OPTIMUS_MAX_PARALLEL_JOBS
          value: "{{max_parallel_jobs}}"
